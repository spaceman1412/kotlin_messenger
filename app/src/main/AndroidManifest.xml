<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinmessenger">

    <application
        android:allowBackup="true"
        android:icon="@drawable/messenger"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinMessenger">
        <activity
            android:name=".messages.ChatLogActivity"
            android:exported="true" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messages.LastestMessageActivity" />
        </activity>
        <activity
            android:name=".messages.NewMessageActivity"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messages.LastestMessageActivity" />
        </activity>
        <activity android:name=".messages.LastestMessageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".registerlogin.RegisterActivity"
            android:exported="true"/>
        <activity android:name=".registerlogin.LoginActivity" />
    </application>

</manifest>